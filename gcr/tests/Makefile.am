noinst_PROGRAMS += \
	ui-test-certificate \
	ui-test-key

ui_test_certificate_SOURCES = \
	ui-test-certificate.c

ui_test_certificate_CFLAGS = \
	-DGCR_API_SUBJECT_TO_CHANGE \
	$(GTK_CFLAGS)

