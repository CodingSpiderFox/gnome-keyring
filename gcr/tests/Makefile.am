	$(top_builddir)/gcr/libgcr.la \
	$(GTK_LIBS) \
	$(LIBGCRYPT_LIBS)

ui_test_key_SOURCES = \
	ui-test-key.c

ui_test_key_CFLAGS = \
	-DGCR_API_SUBJECT_TO_CHANGE \
	$(GTK_CFLAGS)

ui_test_key_LDADD = \
	$(top_builddir)/gcr/libgcr.la \
	$(GTK_LIBS) \
